@model FizzBuzzMVC.Models.FizzBuzz

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 mt-5">
        <div class="col border-end border-2">
            <h3>FIZZ BUZZ: A Coding Project</h3>
            <p>
                When it counts, you Fizz Buzz. A Javascript coding exercise using loops. Write
                a program that prints the numbers from 1 to 100 and for multiples of '3' display
                <strong>"Fizz"</strong> instead of the number and for the multiples of '5'
                display <strong>"Buzz"</strong>. If multiple of both display <strong>"FizzBuzz"</strong>.
            </p>
            <h4>Instructions</h4>
            <p>
                Enter a fizz and a buzz value. Press the buttom and the value will appear.
            </p>
        </div>
        <div class="col">
            <h4>Enter Values</h4>
            @*Form goes here*@
            <form asp-controller="Home" asp-action="FBPage" class="row gy-2 gx-3" method="post">
                <div class="col form-group">
                    <label asp-for="FizzValue">Fizz Value</label>
                    <input type="number" asp-for="FizzValue" class="form-control" placeholder="Enter Fizz" value="@Model.FizzValue" aria-label="Fizz Value" />
                </div>
                <div class="col form-group">
                    <label asp-for="BuzzValue">Buzz Value</label>
                    <input type="number" asp-for="BuzzValue" class="form-control" placeholder="Enter Buzz" value="@Model.BuzzValue" aria-label="Buzz Value" />
                </div>
                <div class="col-12 d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark btn-lg">Run it!</button>
                </div>
            </form>
            <div id="resultsContainer" class="">
                <h2 class="mt-5 border-bottom border-2">Results</h2>
                <div class="table-responsive">
                    @*Table goes here*@
                    @if (Model.Result.Count > 0)
                    {
                        <table class="table table-striped table-hover table-dark table-sm">
                            <thead>
                                <tr><th colspan="5">Fizz Buzz Results</th></tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Result.Count; i += 5)
                                {
                                    <tr>
                                        <td>@Model.Result[i]</td>
                                        <td>@Model.Result[i + 1]</td>
                                        <td>@Model.Result[i + 2]</td>
                                        <td>@Model.Result[i + 3]</td>
                                        <td>@Model.Result[i + 4]</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>